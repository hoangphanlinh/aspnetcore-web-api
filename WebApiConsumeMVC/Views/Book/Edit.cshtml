@model BookViewModel
 <!-- Edit Modal HTML -->
<div id="editEmployeeModal-@Model.Id" class="modal fade" role="dialog" tabindex="-1" aria-labelledby="editBookLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-controller="Book" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="modal-header">
                    <h4 class="modal-title">Edit Employee</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <input type="hidden" asp-for="Id"/>
                        <label>Title</label>
                        <input type="text" asp-for="Title" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <input type="text" asp-for="Description" class="form-control" required>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsRead" /> @Html.DisplayNameFor(model => model.IsRead)
                        </label>
                    </div>
                    <div class="form-group">
                        <label>DateRead</label>
                        <input type="datetime" asp-for="DateRead" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Rate</label>
                        <input type="number" asp-for="Rate" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Genre</label>
                        <input type="text" asp-for="Genre" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label>Author</label>
                        <input type="text" asp-for="Author" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label>ConvertURL</label>
                        <input type="text" asp-for="CoverUrl" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label>DateUpdated</label>
                        <input type="datetime" asp-for="DateAdded" class="form-control" required>
                    </div>

                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                    <input type="submit" class="btn btn-info" value="Save">
                </div>
            </form>
        </div>
    </div>
</div>
